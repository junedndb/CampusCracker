                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="10dp"
                                android:text="Code"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold"
